{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "paths": {
    "@/*": ["./src/*"]
  },
  "include": ["index.ts", "**/*.ts"],
  "exclude": ["node_modules"]
}
